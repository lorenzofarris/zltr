%html
  %head
    %link{:href => url("/style.css"), :rel => "stylesheet", :type => "text/css"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %title Chinese Flashcards
  %body
    #links
      #home_link
        %a{:href => url("/") } Return to Main Page
      #add_card
        %a{:href => url("/add") } Add another card.
    #cards
      %table
        %tr.headings
          %th Traditional
          %th Simplified
          %th Pinyin
          %th English
        %tr.card_row
          %td.traditional
          %td.simplified
          %td.pinyin
          %td.english
          %td.index
            %a{:href => url("/fc/edit/0")} Edit this card
          %td.delete
            %a{:href => url("/fc/delete-confirm/0")} Delete this card
