%html
  %head
    %link{:href => "/style.css", :rel => "stylesheet", :type => "text/css"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}
    %title Add Chinese to Review
  %body
    #lookup
      %form{:action => "/csa", :method => "post"}
        Search by simplified character:
        %input{:class=>"character", :maxlength => "1024", :name => "simplified", :size => "10", :type => "text"}/
        %button{:name => "submit", :type => "submit"} Search
    #choices{:hidden => ""}
      Choose one of these entries to prepopulate the flashcard fields
      %table    
        %tr
          %th Traditional Character
          %th Simplified Character
          %th Pinyin
          %th English
        %tr.data
          %td.traditional
          %td.simplified
          %td.pinyin
          %td.english
          %td.index 
            %form{:action => "/csa", :method => "post"}
              %input{:type => "hidden", :name=> "traditional", :class=>"traditional"}
              %input{:type => "hidden", :name=> "simplified", :class => "simplified"}
              %input{:type => "hidden", :name=> "pinyin", :class => "pinyin"}
              %input{:type => "hidden", :name => "english", :class => "english"}
              %button{:type => "submit"} Select          
    #add_to_deck
      %form{:action => "/fc/add", :method => "post"}
        %table{:width=>"100%"}
          %tr
            %td
              %label{:for => "simplified"} Simplified Character
            %td
              %input{:name => "simplified", :size => "10", :class=>'character'} 
          %tr
            %td     
              %label{:for => "traditional"} Traditional Character
            %td
              %input{:name => "traditional", :size => "10", :class=>'character'}
          %tr
            %td
              %label{:for => "pinyin"} Pinyin
            %td
              %input{:name => "pinyin", :size => "20", :class=>'pinyin'}
          %tr
            %td
              %label{:for => "english"} English
            %td
              %textarea{:name => "english", :rows=>"3", :cols=>"20", :class=>'english'}
          %tr
            %td{:colspan=>2}
              %button{:name => "submit", :type => "submit"} Add it to deck
    #results.character
    #link
      %a{:href=>"/"}Return to Main Page
